<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox id="sidebar" fx:controller="org.example.projectcalendar.controllers.AppSideBar" alignment="CENTER" spacing="10.0" styleClass="sidebar" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox alignment="TOP_CENTER" spacing="10.0">
         <children>
            <Button styleClass="button" text="Home" />
            <Button styleClass="button" text="Calendar" fx:id="calendarButton" onMouseClicked="#onCalenderClicked" />
         </children>
      </VBox>
      <VBox alignment="BOTTOM_CENTER" spacing="10.0" VBox.vgrow="ALWAYS">
         <children>
            <Button styleClass="button" id="button" text="Settings" />
            <Button styleClass="button" id="contact" layoutX="10.0" layoutY="160.0" text="Contact us">
               <font>
                  <Font size="9.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </children>
</VBox>
