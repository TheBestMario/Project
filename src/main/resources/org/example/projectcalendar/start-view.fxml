<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="rootPane" alignment="CENTER" fillWidth="false" minHeight="500.0" minWidth="500.0" prefHeight="500.0" prefWidth="500.0" styleClass="start-view--background" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.projectcalendar.controllers.startViewController">
   <VBox alignment="CENTER" fillWidth="false" minHeight="400.0" minWidth="300.0" prefHeight="400.0" prefWidth="300.0" styleClass="start-view--vbox2">
      <children>
        <Label fx:id="welcomeText" text="Mario Calendar" textFill="WHITE" wrapText="true">
            <VBox.margin>
               <Insets bottom="30.0" />
            </VBox.margin>
            <font>
               <Font size="18.0" />
            </font>
         </Label>
         <Label fx:id="welcomeText1" text="Login or Register to use the application." textFill="WHITE" wrapText="true">
            <font>
               <Font size="13.0" />
            </font>
         </Label>
         <VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #3C3131FF;">
            <padding>
               <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <children>
              <Button fx:id="loginButton" onAction="#onLoginButtonClick" prefHeight="25.0" prefWidth="160.0" text="Login as an existing user" />
              <Button fx:id="registerButton" onAction="#onRegisterButtonClick" prefHeight="25.0" prefWidth="160.0" text="Register an account" />
            </children>
            <VBox.margin>
               <Insets top="30.0" />
            </VBox.margin>
         </VBox>
      </children>
   </VBox>

</VBox>
