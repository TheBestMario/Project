<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<HBox id="titlebar" spacing="10" styleClass="titlebar" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
            <children>
                <Label styleClass="titlebar-title" text="Calendar Application" />
            </children>
        </HBox>
        <HBox alignment="CENTER_RIGHT" spacing="10" HBox.hgrow="NEVER">
            <children>
                <Button styleClass="titlebar-button">
                    <graphic>
                        <HBox alignment="CENTER" spacing="5">
                            <children>
                                <Label styleClass="titlebar-new-label" text="New" />
                                <Label text="â–¼" />
                            </children>
                        </HBox>
                    </graphic>
                </Button>
                <Button styleClass="titlebar-button" text="Notifs" />
                <Button styleClass="user-button">
                    <graphic>
                        <HBox alignment="CENTER" spacing="5">
                            <children>
                                <FontIcon iconLiteral="fa-user" iconSize="30" styleClass="titlebar-icon" />
                                <Label styleClass="titlebar-name" text="User Name" />
                            </children>
                        </HBox>
                    </graphic>
                </Button>
            </children>
        </HBox>
    </children>
</HBox>
